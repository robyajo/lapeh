generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model cache {
  id         String @id @default(uuid())  
  key        String @unique
  value      String
  expiration Int
}

model cache_locks {
  id         String @id @default(uuid())  
  key        String @unique
  owner      String
  expiration Int
}

model failed_jobs {
  id         String   @id @default(uuid())  
  uuid       String   @unique
  connection String
  queue      String
  payload    String
  exception  String
  failed_at  DateTime @default(now())
}

model job_batches {
  id             String @id 
  name           String
  total_jobs     Int
  pending_jobs   Int
  failed_jobs    Int
  failed_job_ids String
  options        String?
  cancelled_at   Int?
  created_at     Int
  finished_at    Int?
}

model jobs {
  id           String @id @default(uuid())  
  queue        String
  payload      String
  attempts     Int
  reserved_at  Int?
  available_at Int
  created_at   Int

  @@index([queue])
}

model migrations {
  id        String @id @default(uuid())  
  migration String
  batch     Int
}

model password_reset_tokens {
  id         String    @id @default(uuid())  
  email      String    @unique
  token      String
  created_at DateTime?
}

model personal_access_tokens {
  id             String    @id @default(uuid())  
  tokenable_type String
  tokenable_id   String
  name           String
  token          String    @unique
  abilities      String?
  last_used_at   DateTime?
  expires_at     DateTime?
  created_at     DateTime?
  updated_at     DateTime?

  @@index([expires_at])
  @@index([tokenable_type, tokenable_id])
}

model sessions {
  id            String  @id 
  user_id       String?
  ip_address    String?
  user_agent    String?
  payload       String
  last_activity Int

  @@index([last_activity])
  @@index([user_id])
}

model users {
  id                String    @id @default(uuid())  
  uuid              String    @unique
  name              String
  email             String    @unique
  avatar            String?
  avatar_url        String?
  email_verified_at DateTime?
  password          String
  remember_token    String?
  created_at        DateTime?
  updated_at        DateTime?
}



model pets {
  id         String    @id @default(uuid())  
  name       String
  species    String
  age        Int
  created_at DateTime?
  updated_at DateTime?
}
